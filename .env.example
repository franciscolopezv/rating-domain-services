# Environment Configuration Template
# Copy this file to .env and update values for your environment

# Environment (dev, staging, prod)
ENVIRONMENT=prod
VERSION=latest

# Database Configuration - Write DB
WRITE_DB_NAME=ratings_write
WRITE_DB_USER=ratings_user
WRITE_DB_PASSWORD=your_secure_password_here
WRITE_DB_PORT=5432

# Database Configuration - Read DB
READ_DB_NAME=ratings_read
READ_DB_USER=ratings_user
READ_DB_PASSWORD=your_secure_password_here
READ_DB_PORT=5433

# Kafka Configuration
KAFKA_EXTERNAL_HOST=localhost
KAFKA_EXTERNAL_PORT=9092
KAFKA_JMX_PORT=9101
KAFKA_REPLICATION_FACTOR=1
KAFKA_LOG_RETENTION_HOURS=168
ZOOKEEPER_PORT=2181

# Service Ports
COMMAND_HTTP_PORT=8081
COMMAND_GRPC_PORT=9090
QUERY_HTTP_PORT=8082

# Security
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION=3600

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000